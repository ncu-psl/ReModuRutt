<UserControl x:Class="AnalysisExtension.View.TransformWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnalysisExtension.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="transferTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock x:Name="before_tb" Text="{Binding CodeBefore}" Width="200"/>
                <Button VerticalAlignment="Center" Content=">>" Width="50"/>
                <TextBlock x:Name="after_tb" Text="{Binding CodeAfter}" Width="200"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer PreviewMouseWheel="OnPreviewMouseWheelListener">
        <ListView x:Name="codeList" ItemTemplate="{StaticResource transferTemplate}"  ScrollViewer.CanContentScroll="True" />
    </ScrollViewer>
</UserControl>
