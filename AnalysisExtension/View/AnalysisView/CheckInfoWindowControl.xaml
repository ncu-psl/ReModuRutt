<UserControl x:Class="AnalysisExtension.CheckInfoWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnalysisExtension"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,19" >
            <TextBlock Text="Check the info : " Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
            <TextBlock x:Name="check_info_analysis_tb" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/> 
        </StackPanel>

        <Button Content="Next" Click="OnClickBtNextListener" Width="76" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="Previous" Click="OnClickBtPreviousListener" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76" Margin="0,0,76,0"/>
        <Button Content="Cancel" Click="OnClickBtCancelListener" Width="76" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,0,152,0"/>
    </Grid>
</UserControl>
