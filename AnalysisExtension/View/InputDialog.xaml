<UserControl x:Class="AnalysisExtension.View.InputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnalysisExtension.View"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="350">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,19" Width="150">
            <TextBlock x:Name="input_dialog_content" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>            
            <TextBox x:Name="input_dialog_text_box" Margin="0,10,0,0" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="OK" Click="OnClickBtOKListener" Width="76"/>
            <Button Content="Cancel" Click="OnClickBtCancelListener" Width="76"/>
        </StackPanel>
    </Grid>
</UserControl>
